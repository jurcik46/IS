heat_template_version: rocky


resources:
  Net:
    type: OS::Neutron::Net
    properties:
      admin_state_up: True
      name: network
      shared: False

  PrivateSubnet:
    type: OS::Neutron::Subnet
    properties:
      name: subnet
      cidr: 10.0.0.0/24
      dns_nameservers:
        - 8.8.8.8
        - 8.8.4.4
      enable_dhcp: True
      network: { get_resource: Net }